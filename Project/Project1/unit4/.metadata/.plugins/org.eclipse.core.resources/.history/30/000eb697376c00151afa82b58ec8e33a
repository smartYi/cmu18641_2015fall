package client;

import java.io.BufferedReader;
import java.io.FileInputStream;
import java.io.FileReader;
import java.io.IOException;
import java.net.Socket;
import java.util.ArrayList;
import java.util.Properties;

public class CarModelOptionsIO {
	
	ArrayList<String> fileName = new ArrayList<String>();
	
	
	
	/**
	 * This method is to get different model names.
	 * @param fileSets
	 * @return
	 */
	 public void getFileName(String fileSets) {
			String propertyName;
			BufferedReader bufferedReader = null;
			try{
				bufferedReader = new BufferedReader(new FileReader(fileSets));
				
				//Read different model files
				
				while((propertyName = bufferedReader.readLine())!= null) {
					fileName.add(propertyName);
				}
			}catch(IOException e) {
				System.out.println("Can not open file!");
				e.printStackTrace();
			}
	    }
	
	/**
	 * This method is to read property from property file and transfer the object from client to server.
	 */
	public void readProperty() {
			for(int i=0;i<fileName.size();i++) {
				Properties properties = new Properties();
				try{
					FileInputStream fileInputStream = new FileInputStream(fileName.get(i));
					properties.load(fileInputStream);
					System.out.println("Client: Successfully load the properties file!");
					printWriter.println("Client: Sending properties file......");
					printWriter.flush();
					objectOutputStream.writeObject(properties);
				}catch(IOException e) {
					e.printStackTrace();
				}
			}
	}
}
